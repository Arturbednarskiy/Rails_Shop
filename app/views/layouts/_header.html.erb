<header>
  <div class="text-center">
    <nav class="bg-white border-gray-200 px-2 sm:px-4 py-2.5 rounded dark:bg-green-600">
      <div class="container flex flex-wrap items-center justify-between mx-auto">
        <div class="flex items-center w-8 h-8">
          <a href="/" class="flex items-center">
            <%= image_tag("ruby-icon-png-6.png", alt: "Rails")  %>
          </a>
        </div>
        <div class="flex md:order-2">
          <button type="button" data-collapse-toggle="navbar-search" aria-controls="navbar-search" aria-expanded="false" class="md:hidden text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 mr-1" >
            <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
            <span class="sr-only">Search</span>
          </button>
          <div class="relative hidden md:block">
            <div>
              <% if user_signed_in? %>
                <%= button_to "Log out", destroy_user_session_path, method: :delete, form: {turbolink: false}, class: "inline-block px-6 py-2.5 bg-black text-green-600 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-white hover:shadow-lg focus:bg-white focus:shadow-lg focus:outline-none focus:ring-0 active:bg-white active:shadow-lg transition duration-150 ease-in-out" %>
              <% else %>
              <%= link_to new_user_session_path do %>
                <button type="button" class="inline-block px-6 py-2.5 bg-black text-green-600 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-white hover:shadow-lg focus:bg-white focus:shadow-lg focus:outline-none focus:ring-0 active:bg-white active:shadow-lg transition duration-150 ease-in-out">Log in</button>
              <% end %>
              <%= link_to new_user_registration_path do %>
                <button type="button" class="inline-block px-6 py-2.5 bg-black text-green-600 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-white hover:shadow-lg focus:bg-white focus:shadow-lg focus:outline-none focus:ring-0 active:bg-white active:shadow-lg transition duration-150 ease-in-out">Sign up</button>
              <% end %>
            <% end %>
          </div>
        </div>
        <% if user_signed_in? %>
          <h2 class="text-slate-50">
          <%= current_user.first_name %>
          </h2>
          <% end %>
        <button data-collapse-toggle="navbar-search" type="button" class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-search" aria-expanded="false">
          <span class="sr-only">Open menu</span>
          <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
        </button>
      </div>
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-search">
          <div class="relative mt-3 md:hidden">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="sm:text-center">
            <ul class="flex flex-col p-4 mt-4 bg-red-600 border border-red-600 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-red dark:bg-green-600 md:dark:bg-green-600 dark:border-gray-700">
              <li>
                <%= link_to t('header.menu.products'), products_path, class: "block py-2 pl-3 pr-4 #{current_link_class(products_path)} rounded hover:bg-dark-100 md:hover:bg-transparent md:hover:text-dark-700 md:p-0 md:dark:hover:text-dark dark:text-white-400 dark:hover:bg-white-700 dark:hover:text-dark md:dark:hover:bg-transparent dark:border-dark-700 sm:text-center" %>
              </li>
              <li>
                <%= link_to t('header.menu.cart'),cart_path(:id), method: :get, form: {turbolink: false}, class: "block py-2 pl-3 pr-4 #{current_link_class(cart_path(:id))} rounded hover:bg-dark-100 md:hover:bg-transparent md:hover:text-dark-700 md:p-0 md:dark:hover:text-dark dark:text-white-400 dark:hover:bg-white-700 dark:hover:text-dark md:dark:hover:bg-transparent dark:border-dark-700 sm:text-center"%>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>